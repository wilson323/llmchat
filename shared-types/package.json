{
  "name": "@llmchat/shared-types",
  "version": "2.0.0",
  "description": "LLMChat 前后端共享类型定义包",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts --max-warnings 0",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build",
    "dev": "npm run build:watch"
  },
  "keywords": [
    "typescript",
    "types",
    "shared",
    "llmchat",
    "chat",
    "ai",
    "agent"
  ],
  "author": "LLMChat Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/llmchat/shared-types.git"
  },
  "bugs": {
    "url": "https://github.com/llmchat/shared-types/issues"
  },
  "homepage": "https://github.com/llmchat/shared-types#readme",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./entities": {
      "types": "./dist/entities/index.d.ts",
      "require": "./dist/entities/index.js",
      "import": "./dist/entities/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "require": "./dist/components/index.js",
      "import": "./dist/components/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "require": "./dist/utils/index.js",
      "import": "./dist/utils/index.js"
    },
    "./providers": {
      "types": "./dist/providers/index.d.ts",
      "require": "./dist/providers/index.js",
      "import": "./dist/providers/index.js"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "require": "./dist/api/index.js",
      "import": "./dist/api/index.js"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.19.22",
    "@types/react": "^18.2.45",
    "@eslint/js": "^9.38.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
