{
  "name": "llmchat",
  "version": "1.0.0",
  "description": "智能体切换聊天应用 - 类似ChatGPT官网的多智能体切换功能",
  "main": "index.js",
  "scripts": {
    "postinstall": "pnpm --filter @llmchat/shared-types run build",
    "dev": "concurrently \"pnpm --filter @llmchat/backend run dev\" \"pnpm --filter @llmchat/frontend run dev\"",
    "backend:dev": "pnpm --filter @llmchat/backend run dev",
    "frontend:dev": "pnpm --filter @llmchat/frontend run dev",
    "build": "pnpm --filter @llmchat/shared-types run build && pnpm run backend:build && pnpm run frontend:build",
    "backend:build": "pnpm --filter @llmchat/backend run build",
    "frontend:build": "pnpm --filter @llmchat/frontend run build",
    "start": "pnpm --filter @llmchat/backend start",
    "type-check": "pnpm --filter @llmchat/backend run type-check && pnpm --filter @llmchat/frontend run type-check",
    "test": "pnpm run backend:test && pnpm run frontend:test",
    "backend:test": "pnpm --filter @llmchat/backend run test",
    "frontend:test": "pnpm --filter @llmchat/frontend run test",
    "backend:lint": "pnpm --filter @llmchat/backend run lint",
    "frontend:lint": "pnpm --filter @llmchat/frontend run lint",
    "lint": "pnpm run backend:lint && pnpm run frontend:lint",
    "lint:fix": "pnpm --filter @llmchat/backend run lint:fix && pnpm --filter @llmchat/frontend run lint:fix",
    "prepare": "husky"
  },
  "keywords": [
    "llm",
    "chat",
    "ai",
    "agent",
    "switching",
    "react",
    "typescript",
    "node"
  ],
  "author": "AI Developer",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "concurrently": "^8.2.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10"
  },
  "workspaces": [
    "backend",
    "frontend",
    "shared-types"
  ],
  "dependencies": {
    "date-fns": "^4.1.0"
  },
  "lint-staged": {
    "*.ts": ["eslint --fix", "tsc --noEmit"],
    "*.tsx": ["eslint --fix", "tsc --noEmit"]
  }
}
