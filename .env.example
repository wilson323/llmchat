# ========================================
# LLM Chat 应用环境变量配置模板
# ========================================
# 
# 使用说明：
# 1. 复制此文件为 .env
# 2. 填写实际的配置值
# 3. 切勿将 .env 提交到版本控制系统
#

# ========================================
# 应用配置
# ========================================
NODE_ENV=development
PORT=3001

# ========================================
# 数据库配置 (PostgreSQL)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_database_password_here
DB_NAME=llmchat
DB_SSL=false

# ========================================
# Redis 配置 (Token 存储)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# JWT 配置
# ========================================
JWT_SECRET=your_jwt_secret_key_here_at_least_64_characters_long_for_production
TOKEN_TTL=604800
REFRESH_TOKEN_TTL=2592000

# ========================================
# 日志配置
# ========================================
LOG_LEVEL=info
LOG_DIR=./log

# ========================================
# FastGPT 智能体配置
# ========================================
FASTGPT_AGENT_ID_1=agent-fastgpt-1
FASTGPT_APP_ID_1=your_fastgpt_app_id_1
FASTGPT_AGENT_NAME_1=FastGPT助手1
FASTGPT_AGENT_DESCRIPTION_1=基于知识库的智能助手
FASTGPT_ENDPOINT_1=https://api.fastgpt.in/api/v1/chat/completions
FASTGPT_API_KEY_1=fastgpt-your_api_key_here_1
FASTGPT_MODEL_1=gpt-3.5-turbo
FASTGPT_RATE_LIMIT_RPM_1=60
FASTGPT_RATE_LIMIT_TPM_1=100000

FASTGPT_AGENT_ID_2=agent-fastgpt-2
FASTGPT_APP_ID_2=your_fastgpt_app_id_2
FASTGPT_AGENT_NAME_2=FastGPT助手2
FASTGPT_AGENT_DESCRIPTION_2=另一个知识库助手
FASTGPT_ENDPOINT_2=https://api.fastgpt.in/api/v1/chat/completions
FASTGPT_API_KEY_2=fastgpt-your_api_key_here_2
FASTGPT_MODEL_2=gpt-4
FASTGPT_RATE_LIMIT_RPM_2=30
FASTGPT_RATE_LIMIT_TPM_2=50000

FASTGPT_AGENT_ID_3=agent-fastgpt-3
FASTGPT_APP_ID_3=your_fastgpt_app_id_3
FASTGPT_AGENT_NAME_3=FastGPT助手3
FASTGPT_AGENT_DESCRIPTION_3=专业知识库助手
FASTGPT_ENDPOINT_3=https://api.fastgpt.in/api/v1/chat/completions
FASTGPT_API_KEY_3=fastgpt-your_api_key_here_3
FASTGPT_MODEL_3=gpt-4-turbo
FASTGPT_RATE_LIMIT_RPM_3=60
FASTGPT_RATE_LIMIT_TPM_3=150000

# ========================================
# CORS 配置
# ========================================
FRONTEND_URL=http://localhost:3000

# ========================================
# 速率限制
# ========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
REQUEST_TIMEOUT=30000

# ========================================
# 审计日志
# ========================================
AUDIT_LOG_RETENTION_DAYS=90
