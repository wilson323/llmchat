{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleDetection": "force",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "exactOptionalPropertyTypes": true,
    // "types": ["node", "jest"], // ğŸ”§ ç§»é™¤typesé™åˆ¶ï¼Œå…è®¸åŠ è½½src/types/express.d.tsç­‰è‡ªå®šä¹‰ç±»å‹å®šä¹‰
    "typeRoots": ["./node_modules/@types", "./src/types"], // ğŸ”§ æ˜ç¡®æŒ‡å®šç±»å‹å®šä¹‰æŸ¥æ‰¾è·¯å¾„
    "baseUrl": ".",

    "paths": {
      "@/*": ["src/*"],
      "@/types/*": ["src/types/*"],
      "@/services/*": ["src/services/*"],
      "@/controllers/*": ["src/controllers/*"],
      "@/routes/*": ["src/routes/*"],
      "@/middleware/*": ["src/middleware/*"],
      "@/utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*", "jest.config.ts"],
  "exclude": ["node_modules", "dist", "scripts", "src/scripts", "../frontend/**/*", "**/*.skip.ts"]
}
