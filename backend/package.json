{
  "name": "@llmchat/backend",
  "version": "1.0.0",
  "description": "LLMChat后端服务 - 智能体配置管理和聊天代理",
  "main": "dist/index.js",
  "scripts": {
    "//": "========== 核心开发命令 ==========",
    "dev": "cross-env NODE_ENV=development node --expose-gc --max-old-space-size=2048 --max-semi-space-size=128 -r ts-node/register -r ./src/dotenv-loader.ts -r tsconfig-paths/register src/index.ts",
    "dev:watch": "ts-node-dev --respawn --transpile-only --expose-gc -r ./src/dotenv-loader.ts -r tsconfig-paths/register src/index.ts",
    "//build": "========== 构建命令 ==========",
    "build": "tsc && tsc-alias -p tsconfig.json --verbose",
    "start": "cross-env NODE_ENV=production node --expose-gc --max-old-space-size=4096 --max-semi-space-size=256 dist/src/index.js",
    "//test": "========== 测试命令 ==========",
    "test": "echo 'Tests removed for simplification'",
    "//quality": "========== 代码质量 ==========",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "@llmchat/shared-types": "workspace:*",
    "@sentry/node": "^10.17.0",
    "@sentry/profiling-node": "^10.17.0",
    "@types/lru-cache": "^7.10.10",
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dxf-parser": "^1.1.2",
    "dxf-writer": "^1.18.4",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "geoip-lite": "^1.4.6",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.2.2",
    "multer": "^2.0.0",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^2.4.1",
    "uuid": "^9.0.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongodb": "^4.0.7",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/llmchat.git"
  },
  "keywords": [
    "llm",
    "chat",
    "ai",
    "backend",
    "security",
    "authentication",
    "rate-limiting"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-org/llmchat/issues"
  },
  "homepage": "https://github.com/your-org/llmchat#readme"
}
