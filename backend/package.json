{
  "name": "@llmchat/backend",
  "version": "1.0.0",
  "description": "LLMChat后端服务 - 智能体配置管理和聊天代理",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r ./src/dotenv-loader.ts -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "validate-config": "ts-node -r tsconfig-paths/register scripts/validate-config.ts",
    "validate:env": "ts-node -r tsconfig-paths/register src/scripts/validate-env.ts",
    "sanitize:config": "ts-node -r tsconfig-paths/register src/scripts/sanitize-config.ts",
    "migrate:passwords": "ts-node -r tsconfig-paths/register src/scripts/migrate-passwords.ts",
    "prestart": "npm run validate:env",
    "migrate": "ts-node -r tsconfig-paths/register src/scripts/migrate.ts",
    "migrate:up": "npm run migrate up",
    "migrate:down": "npm run migrate down",
    "migrate:status": "npm run migrate status"
  },
  "dependencies": {
    "@llmchat/shared-types": "workspace:*",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "geoip-lite": "^1.4.6",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "pg": "^8.16.3",
    "rate-limiter-flexible": "^2.4.1",
    "uuid": "^9.0.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}