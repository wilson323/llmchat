{
  // 项目根配置（被 backend/src/utils/db.ts 读取）
  // 使用环境变量占位符，deepReplaceEnvVariables 会在运行时替换
  "database": {
    "postgres": {
      "host": "${DB_HOST}",
      "port": ${DB_PORT},
      "user": "${DB_USER}",
      "password": "${DB_PASSWORD}",
      "database": "${DB_NAME}",
      "ssl": ${DB_SSL}
    }
  },
  "auth": {
    "tokenTTLSeconds": ${TOKEN_TTL_SECONDS}
  }
}